      "following_url": "https://api.github.com/users/romanornr/following%7B/other_user%7D",
      "gists_url": "https://api.github.com/users/romanornr/gists%7B/gist_id%7D",
      "starred_url": "https://api.github.com/users/romanornr/starred%7B/owner%7D%7B/repo%7D",
      "subscriptions_url": "https://api.github.com/users/romanornr/subscriptions",
      "organizations_url": "https://api.github.com/users/romanornr/orgs",
      "repos_url": "https://api.github.com/users/romanornr/repos",
      "events_url": "https://api.github.com/users/romanornr/events%7B/privacy%7D",
