    "title": "Let systemd bitcoind write to /etc/bitcoin",
    "user": {
      "login": "rodasmith",
      "id": 4968956,
      "node_id": "MDQ6VXNlcjQ5Njg5NTY=",
      "avatar_url": "https://avatars.githubusercontent.com/u/4968956?v=4",
      "gravatar_id": "",
